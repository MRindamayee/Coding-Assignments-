import java.util.Scanner;
class Astrisk
{
public static void main(String args[]) 
{
int rows;
Scanner sc= new Scanner(System.in);
System.out.print("enter the no.of rows");
rows=sc.nextInt();
int i,j;
for ( i =rows; i >= 1; --i) 
{
for (int j = 1; j <= i; ++j) 
{
System.out.print(" * ");
}
System.out.println();
}
}
}
