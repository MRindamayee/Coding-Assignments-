import java.util.Scanner;
class Astriskagain
{
public static void main(String args[]) 
{
int rows;
Scanner sc= new Scanner(System.in);
System.out.print("enter the no.of rows");
rows=sc.nextInt();
int i,j;
for( i=0; i<=rows; i++) 
{
for(j= 1; j<= i;j++) 
{
System.out.print(" * ");
}
System.out.println();
}

for( i=rows-1; i>=0; i--) 
{
for(j= 0; j<=i;j++) 
{
System.out.print(" * ");
}
System.out.println();
}
